<% unless session[:game_message].nil? %>
  <%= session[:game_message] %>
  <% first_card = false %>
<% else %>
  <% first_card = true %>
<% end %>

<div><h3></h3></div>
<div id="cloth"><h4><%= session[:player_name] %>'s cards:</h4>
<h5>Total chips: $<%= session[:player_chips] %></h5>
  <div class="row-fluid" style="border: 1px dashed blue">
    <div class="span6" style="border: 1px solid black">
  <% session[:player_cards].each do |suit, card| %>
    <img id="card" src="images/cards/<%= suit %>_<%= card %>.jpg" />
  <% end %>
<h5>Your total is <%= add_cards(session[:player_cards]) %><br/>
<% unless session[:game_message].nil? %>
  Dealer has: 
<% else %>
  Dealer is showing: 
<% end %>
<%= add_cards(session[:dealer_cards], first_card) %><br/>
Would you like to</h5>

<% unless session[:game_message].nil? %>
   <form method='post' action='/play_again'>
    <input type="submit" name="play_again" value="Play Again" class="btn"/>
    &nbsp;&nbsp;&nbsp;<input type="submit" name="play_again" value="Quit" class="btn"/>
  </form>
<% else %>
  <form method='post' action='/hit_stay'>
    <input type="submit" name="hit_stay" value="Hit" class="btn"/>
    &nbsp;&nbsp;&nbsp;<input type="submit" name="hit_stay" value="Stay" class="btn"/>
  </form>
<% end %>




<h4>Dealer's cards:</h4>
<div class="row-fluid" style="border: 1px dashed blue">
  <div class="span6" style="border: 1px solid black">
  <% session[:dealer_cards].each do |suit, card| %>
    <% if first_card == true %>
      <img id="card" src="images/cards/cover.jpg" />
      <% first_card = false %>
    <% else %>
      <img id="card" src="images/cards/<%= suit %>_<%= card %>.jpg" />
    <% end %>
  <% end %>
</div></div>
</div>